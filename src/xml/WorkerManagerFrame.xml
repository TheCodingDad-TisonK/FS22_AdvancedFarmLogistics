<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="WorkerManager">
    <GuiElement type="empty" profile="uiInGameMenuFrame">
        <!-- Header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel">
            <GuiElement type="bitmap" profile="ingameMenuGeneralSettingsHeaderIcon" />
            <GuiElement type="text" profile="ingameMenuFrameHeaderText" text="Worker Manager" />
        </GuiElement>

        <!-- Content Box -->
        <GuiElement type="empty" profile="ingameMenuSettingsBox" id="settingsContainer">
            <GuiElement type="bitmap" profile="topScrollClipper" name="topClipper" />
            <GuiElement type="bitmap" profile="bottomScrollClipper" name="bottomClipper" />
            <GuiElement type="scrollingLayout" profile="ingameMenuSettingsLayout" id="boxLayout" topClipperElementName="topClipper" bottomClipperElementName="bottomClipper">
                
                <!-- Two Column Layout -->
                <GuiElement type="flowLayout" profile="ingameMenuSettingsTwoColumnLayout">
                    
                    <!-- Left Column: Hired Workers -->
                    <GuiElement type="empty" profile="ingameMenuSettingsColumn">
                        <GuiElement type="text" profile="settingsMenuSubtitle" text="Hired Workers" />
                        <GuiElement type="list" profile="ingameMenuSettingsList" id="hiredWorkersList" onSelectionChanged="onListSelectionChanged" />
                        
                        <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                            <GuiElement type="button" profile="ingameMenuSettingsPauseButton" text="Fire Worker" onClick="onFireClick" id="fireButton" />
                            <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                            <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Fire selected worker (severance pay applies)" />
                        </GuiElement>
                        
                        <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                            <GuiElement type="button" profile="ingameMenuSettingsPauseButton" text="Assign Task" onClick="onAssignTaskClick" id="assignTaskButton" />
                            <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                            <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Assign task to selected worker" />
                        </GuiElement>
                    </GuiElement>
                    
                    <!-- Right Column: Available Workers -->
                    <GuiElement type="empty" profile="ingameMenuSettingsColumn">
                        <GuiElement type="text" profile="settingsMenuSubtitle" text="Available Workers" />
                        <GuiElement type="list" profile="ingameMenuSettingsList" id="availableWorkersList" onSelectionChanged="onListSelectionChanged" />
                        
                        <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                            <GuiElement type="button" profile="ingameMenuSettingsPauseButton" text="Hire Worker" onClick="onHireClick" id="hireButton" />
                            <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                            <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Hire selected worker (1 week wage cost)" />
                        </GuiElement>
                    </GuiElement>
                    
                </GuiElement>
                
                <!-- Statistics Section -->
                <GuiElement type="text" profile="settingsMenuSubtitle" text="Worker Statistics" />
                <GuiElement type="text" profile="multiTextOptionSettingsText" id="workerStatsText" />
                
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>