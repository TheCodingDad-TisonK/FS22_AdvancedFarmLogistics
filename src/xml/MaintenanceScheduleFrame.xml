<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="MaintenanceSchedule">
    <GuiElement type="empty" profile="uiInGameMenuFrame">
        <!-- Header -->
        <GuiElement type="empty" profile="ingameMenuFrameHeaderPanel">
            <GuiElement type="bitmap" profile="ingameMenuGeneralSettingsHeaderIcon" />
            <GuiElement type="text" profile="ingameMenuFrameHeaderText" text="Maintenance Schedule" />
        </GuiElement>

        <!-- Content Box -->
        <GuiElement type="empty" profile="ingameMenuSettingsBox" id="settingsContainer">
            <GuiElement type="bitmap" profile="topScrollClipper" name="topClipper" />
            <GuiElement type="bitmap" profile="bottomScrollClipper" name="bottomClipper" />
            <GuiElement type="scrollingLayout" profile="ingameMenuSettingsLayout" id="boxLayout" topClipperElementName="topClipper" bottomClipperElementName="bottomClipper">
                
                <!-- Equipment List -->
                <GuiElement type="text" profile="settingsMenuSubtitle" text="Equipment Maintenance Schedule" />
                <GuiElement type="list" profile="ingameMenuSettingsList" id="maintenanceList" onSelectionChanged="onListSelectionChanged" />
                
                <!-- Action Buttons -->
                <GuiElement type="flowLayout" profile="ingameMenuSettingsButtonRow">
                    <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                        <GuiElement type="button" profile="ingameMenuSettingsPauseButton" text="Perform Maintenance" onClick="onPerformMaintenanceClick" id="performMaintenanceButton" />
                        <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                        <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Perform maintenance on selected equipment" />
                    </GuiElement>
                    
                    <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                        <GuiElement type="button" profile="ingameMenuSettingsPauseButton" text="Register Vehicle" onClick="onRegisterEquipmentClick" id="registerEquipmentButton" />
                        <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                        <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="Register current vehicle for maintenance tracking" />
                    </GuiElement>
                    
                    <GuiElement type="empty" profile="ingameMenuGameSettingsTextInputWrapper">
                        <GuiElement type="button" profile="ingameMenuSettingsPauseButton" text="View History" onClick="onMaintenanceHistoryClick" id="maintenanceHistoryButton" />
                        <GuiElement type="text" profile="multiTextOptionSettingsTitle" text="" />
                        <GuiElement type="text" profile="multiTextOptionSettingsTooltip" text="View maintenance history for selected equipment" />
                    </GuiElement>
                </GuiElement>
                
                <!-- Statistics -->
                <GuiElement type="text" profile="settingsMenuSubtitle" text="Equipment Statistics" />
                <GuiElement type="text" profile="multiTextOptionSettingsText" id="equipmentStatsText" />
                
            </GuiElement>
        </GuiElement>
    </GuiElement>
</GUI>